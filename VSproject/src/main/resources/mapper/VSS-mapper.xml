<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org // DTD mapper 3.0 // en" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="mapper.VSS-mapper">


	<insert id="makeVSS">
		INSERT INTO VSS
		VALUES(VSS_sequence1.NEXTVAL,#{vss_name},#{vss_content})
	</insert>
	
	<select id="getAllVSS" resultType="VSS">
		SELECT *
		FROM VSS
	</select>
	
	<select id="getOneVSS" resultType="VSS">
		SELECT *
		FROM VSS
		WHERE vss_seq = #{VSS_seq}
	</select>
	
	<select id="maxVSS" resultType="Integer">
		SELECT max(VSS_seq)
		FROM VSS
	</select>
	
	<select id="newVSS" resultType="VSS">
		SELECT *
		FROM VSS
		WHERE ROWNUM <![CDATA[ < ]]>= 5
		ORDER BY vss_seq desc
	</select>
	
</mapper>
